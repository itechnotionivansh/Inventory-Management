# Flask
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here-change-in-production

# Database (MySQL)
DATABASE_URI=mysql+pymysql://root:sql%40123@localhost:3306/product_mgmtt_db

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-here
ACCESS_TOKEN_EXPIRES=900        # 15 minutes
REFRESH_TOKEN_EXPIRES=2592000   # 30 days

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis (for rate limiting - optional, defaults to memory)
REDIS_URL=redis://localhost:6379/0

# Mail (example: Gmail SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# Rate limiting
RATE_LIMIT_DEFAULT=100 per hour


